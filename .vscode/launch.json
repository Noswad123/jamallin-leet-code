{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "findPivot",
			"skipFiles": [
				"<node_internals>/**"
			],
			"preLaunchTask": "tsc: build - tsconfig.json",
			"program": "${workspaceFolder}/src/find-pivot-index/find-pivot-index.ts",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "grep test",
			"args": ["--no-timeouts", "--grep", "${input:mochaGrep}", "./test/**/*spec.js"],
			"skipFiles": [
				"<node_internals>/**"
			],
			"preLaunchTask": "build",
			"program": "${workspaceFolder}/javascript/node_modules/mocha/bin/_mocha",
			"cwd": "${workspaceFolder}/javascript/",
			"outputCapture": "std",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			],
		}
	],
	"inputs": [
		{
			"id": "mochaGrep",
			"description": "Regex to pass to mocha --grep",
			"type": "promptString"
		}
	]
}