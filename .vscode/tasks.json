{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"group": "build",
			"command": "tsc",
			"options": {
				"cwd": "${workspaceFolder}/javascript/"
			},
			"problemMatcher": {
				"base": "$tsc",
				"fileLocation": [
					"relative",
					"${workspaceFolder}/"
				]
			}
		},
		{
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
	]
}
